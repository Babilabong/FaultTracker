@model List<FaultTracker.Models.Fault>
@{
    Layout = "_Layout";
}

<div class="container">
    <h2>ðŸ“‹ Faults List</h2>
    <a class="button" href="/Faults/Create">âž• Add New Fault</a>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fault in Model)
            {
                <tr>
                    <td>@fault.Id</td>
                    <td>@fault.Title</td>
                    <td>@fault.Description</td>
                    <td>@fault.ReportedAt.ToShortDateString()</td>
                    <td>
                        <span class="badge @(fault.Status.ToLower())">@fault.Status</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>